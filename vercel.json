{
  "builds": [
    {
      "src": "CLIENT/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    { "src": "SERVER/main.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/SERVER/main.py" },
    { "src": "/(.*)", "dest": "/CLIENT/$1" }
  ]
}
